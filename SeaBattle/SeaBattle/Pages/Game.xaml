<UserControl x:Class="SeaBattle.Pages.Game"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid x:Name="pageGame" Background="White">
        <TextBlock x:Name="authorizationTextBlock"  
                   Margin="0,20,0,0"
                   HorizontalAlignment="Center"  
                   VerticalAlignment="Top"  
                   Width="62"  
                   Height="30"  
                   Text="Игра"  
                   FontSize="25" 
                   FontWeight="Bold" TextWrapping="Wrap"/>
        <TextBlock x:Name="labelCheckFinder"  
                   Margin="0,70,0,0" 
                   HorizontalAlignment="Center"  
                   VerticalAlignment="Top"  
                   Width="466"  
                   Height="30"  
                   Text="Ожидание подключения соперника..."  
                   FontSize="25" 
                   FontWeight="Bold" TextWrapping="Wrap" Foreground="#FFC9C9C9" RenderTransformOrigin="0.5,0.5">
        </TextBlock>
        <TextBlock x:Name="labelBack"  
                   Style="{StaticResource ScaleTextBlockOnFocus}"
                   Margin="20,20,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"  
                   Width="186"  
                   Height="30"  
                   Text="&lt; Покинуть игру"  
                   FontSize="16" 
                   TextWrapping="Wrap"
                   MouseLeftButtonDown="labelBack_MouseLeftButtonDown">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Grid x:Name="seaPlayer" HorizontalAlignment="Left" Height="220" Margin="80,120,0,0" VerticalAlignment="Top" Width="220" Background="SkyBlue" MouseDown="Grid_MouseDown">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*" />
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid x:Name="seaOpponent" HorizontalAlignment="Right" Height="220" Margin="0,120,80,0" VerticalAlignment="Top" Width="220" Background="SkyBlue" MouseDown="Grid_MouseDown">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*" />
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid x:Name="Chat" Margin="80,345,80,10">
            <TextBox HorizontalAlignment="Left" Margin="10,3,0,75" TextWrapping="Wrap" Width="620"/>
            <TextBox HorizontalAlignment="Left" Height="53" Margin="10,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="512"/>
            <Button Content="Отправить" HorizontalAlignment="Left" Height="26" Margin="527,189,0,0" VerticalAlignment="Top" Width="103"/>
        </Grid>
        <Grid x:Name="Ships" Margin="305,120,300,260">
            <Grid Background="Azure" Margin="10,123,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="172*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <RadioButton HorizontalAlignment="Left" Margin="55,10,0,0" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" Height="14">
                        <Image Source="pack://application:,,,/Resources\fourpads.png" Height="14"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton HorizontalAlignment="Left" Margin="55,30,0,0" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" Height="14">
                        <Image Source="pack://application:,,,/Resources\threepads.png" Height="14" VerticalAlignment="Top"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton HorizontalAlignment="Left" Margin="55,50,0,0" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" Height="14">
                        <Image Source="pack://application:,,,/Resources\twopads.png" Height="14"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton  HorizontalAlignment="Left" Margin="55,70,0,0" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" Height="14">
                        <Image Source="pack://application:,,,/Resources\onepads.png" Height="14"/>
                    </StackPanel>
                </RadioButton>
            </Grid>
            <Grid x:Name="Orientation" Margin="10,31,10,114" HorizontalAlignment="Center" Width="175" Background="AliceBlue">
                <RadioButton x:Name="HorizontalOrientation" HorizontalAlignment="Center" Margin="10,10,81,0" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" Height="14">
                        <Image Source="pack://application:,,,/Resources\fourpads.png" Height="14"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton x:Name="VerticalOrientation" HorizontalAlignment="Center" Margin="94,9,36,0" VerticalAlignment="Top" Height="51">
                    <StackPanel Orientation="Vertical">
                        <Image Source="pack://application:,,,/Resources\vertical.png" Height="48" VerticalAlignment="Center" Margin="0"/>
                    </StackPanel>
                </RadioButton>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
